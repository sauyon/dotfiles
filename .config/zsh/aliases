#!/bin/zsh
R=`echo -e '\e[0;31m'`
G=`echo -e '\e[0;32m'`
B=`echo -e '\e[0;36m'`
W=`echo -e '\e[1m'`
N=`echo -e '\e[0m'`

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
	test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
	alias ls='ls --color=auto'
	#alias dir='dir --color=auto'
	#alias vdir='vdir --color=auto'

	alias grep='grep --color=auto'
	alias fgrep='fgrep --color=auto'
	alias egrep='egrep --color=auto'

	DIFFBIN=$(which diff)
	diff() {
		"$DIFFBIN" -utr $@ | sed -rf "$HOME/.local/bin/colordiff.sed"
	}
fi

# some more ls aliases
alias ll='ls -alhF'
alias la='ls -A'
alias l='ls -FB'

# rsync is better.
alias cp='rsync -aP'

# USACO aliases
genrun() {
	name=`basename $(pwd)`
	g++ -std=c++11 gen.cpp -o gen.o && ./gen.o
	g++ "$name.cpp" -g -o "$name.o"
	time "./$name.o"
	diff "$name.out" "gen.out"
}

corun() {
	name=`basename $(pwd)`
	g++ "$name.cpp" -g -o "$name.o"
	time "./$name.o" && cat "$name.out"
}

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'

alias cowfortune='fortune | cowsay'

alias suspend='i3lock; systemctl suspend'

gnight() {
	cowsay "GNIGHT's Not IGHT"
	i3lock
	systemctl suspend
}

alias uctl='systemctl --user'

if [ $UID -ne 0 ]; then
		alias update='aura -Syu; aura -Akua'
		alias aura='EDITOR=/usr/bin/emacs sudo -E aura'
		alias sctl='sudo systemctl'
fi

if non_gui; then
	alias edit='emacsclient -t'
	alias sedit='sudo emacs -nw'
	#sedit() { emacsclient -e $(for f in "$@"; do echo "(sudo-find-file ${f:A})"; done) }
else
	edit() { emacsclient -n "$@" || emacsclient -t "$@" }
	alias sedit='sudo emacs -nw'
	#sedit() { emacsclient -ne $(for f in "$@"; do echo "(sudo-find-file ${f:A})"; done) }
fi

opendir() { terminator --working-directory="$1" }

mvosz() {mv "$@" /opt/osu/Songs}

alias -s exe="wine"

alias i3cheatsheet='egrep ^bind ~/.config/i3/config | cut -d '\'' '\'' -f 2- | sed '\''s/ /\t/'\'' | column -ts $'\''\t'\'' | pr -2 -w 145 -t | less'
